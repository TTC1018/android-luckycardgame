<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.luckycardgame.presentation.MainActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.MainActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/tg_buttons"
            android:layout_width="0dp"
            android:layout_height="44dp"
            app:layout_constraintEnd_toStartOf="@+id/gl_end"
            app:layout_constraintStart_toStartOf="@+id/gl_start"
            app:layout_constraintTop_toTopOf="@+id/gl_top"
            app:selectionRequired="true"
            app:singleSelection="true">

            <Button
                android:id="@+id/btn_first_toggle"
                style="@style/LuckyCardToggleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{@string/people_num(3)}"
                tools:text="3명" />

            <Button
                style="@style/LuckyCardToggleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{@string/people_num(4)}"
                tools:text="4명" />

            <Button
                style="@style/LuckyCardToggleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{@string/people_num(5)}"
                tools:text="5명" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <TextView
            android:id="@+id/tv_first"
            style="@style/LuckyCardTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/board_first_name"
            app:layout_constraintEnd_toStartOf="@+id/gl_end"
            app:layout_constraintHeight_percent="0.126"
            app:layout_constraintStart_toStartOf="@+id/gl_start"
            app:layout_constraintTop_toBottomOf="@+id/tg_buttons" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cardlist_first"
            style="@style/LuckyCardListStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_first"
            app:layout_constraintEnd_toEndOf="@id/tv_first"
            app:layout_constraintStart_toStartOf="@id/tv_first"
            app:layout_constraintTop_toTopOf="@+id/tv_first"
            app:showCardsOfUser="@{viewModel.users[0]}"
            app:onFlipCard="@{viewModel}"
            tools:listitem="@layout/item_card"
            tools:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_second"
            style="@style/LuckyCardTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/board_second_name"
            app:layout_constraintEnd_toStartOf="@+id/gl_end"
            app:layout_constraintHeight_percent="0.126"
            app:layout_constraintStart_toStartOf="@+id/gl_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_first" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cardlist_second"
            style="@style/LuckyCardListStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_second"
            app:layout_constraintEnd_toEndOf="@+id/tv_second"
            app:layout_constraintStart_toStartOf="@+id/tv_second"
            app:layout_constraintTop_toTopOf="@+id/tv_second"
            app:showCardsOfUser="@{viewModel.users[1]}"
            app:onFlipCard="@{viewModel}"
            tools:listitem="@layout/item_card"
            tools:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_third"
            style="@style/LuckyCardTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/board_third_name"
            app:layout_constraintEnd_toStartOf="@+id/gl_end"
            app:layout_constraintHeight_percent="0.126"
            app:layout_constraintStart_toStartOf="@+id/gl_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_second" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cardlist_third"
            style="@style/LuckyCardListStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_third"
            app:layout_constraintEnd_toEndOf="@+id/tv_third"
            app:layout_constraintStart_toStartOf="@+id/tv_third"
            app:layout_constraintTop_toTopOf="@+id/tv_third"
            app:showCardsOfUser="@{viewModel.users[2]}"
            app:onFlipCard="@{viewModel}"
            tools:listitem="@layout/item_card"
            tools:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_fourth"
            style="@style/LuckyCardTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/board_fourth_name"
            android:visibility="@{viewModel.userCount >= 4 ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintEnd_toStartOf="@+id/gl_end"
            app:layout_constraintHeight_percent="0.126"
            app:layout_constraintStart_toStartOf="@+id/gl_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_third" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cardlist_fourth"
            style="@style/LuckyCardListStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="@{viewModel.userCount >= 4 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_fourth"
            app:layout_constraintEnd_toEndOf="@+id/tv_fourth"
            app:layout_constraintStart_toStartOf="@+id/tv_fourth"
            app:layout_constraintTop_toTopOf="@+id/tv_fourth"
            app:showCardsOfUser="@{viewModel.users[3]}"
            app:onFlipCard="@{viewModel}"
            tools:listitem="@layout/item_card"
            tools:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_fifth"
            style="@style/LuckyCardTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/board_fifth_name"
            android:visibility="@{viewModel.userCount == 5 ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toStartOf="@+id/gl_end"
            app:layout_constraintHeight_percent="0.126"
            app:layout_constraintStart_toStartOf="@+id/gl_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_fourth"
            tools:listitem="@layout/item_card"
            tools:orientation="horizontal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cardlist_fifth"
            style="@style/LuckyCardListStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="@{viewModel.userCount == 5 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_fifth"
            app:layout_constraintEnd_toEndOf="@+id/tv_fifth"
            app:layout_constraintStart_toStartOf="@+id/tv_fifth"
            app:layout_constraintTop_toTopOf="@+id/tv_fifth"
            app:showCardsOfUser="@{viewModel.users[4]}"
            app:onFlipCard="@{viewModel}"
            tools:listitem="@layout/item_card"
            tools:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.97" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/ba_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tv_fourth, tv_fifth" />

        <View
            android:id="@+id/v_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_gray_rounded"
            app:layout_constraintBottom_toTopOf="@id/gl_bottom"
            app:layout_constraintEnd_toStartOf="@id/gl_end"
            app:layout_constraintStart_toEndOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/ba_bottom" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="@+id/v_bottom"
            app:layout_constraintEnd_toEndOf="@+id/v_bottom"
            app:layout_constraintStart_toStartOf="@+id/v_bottom"
            app:layout_constraintTop_toTopOf="@+id/v_bottom"
            app:showLeftCards="@{viewModel.leftCards}"
            app:spanCount="@{viewModel.userCount}"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_card"
            tools:orientation="horizontal"
            tools:spanCount="1" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
